{{ attach_library('suffix_zx/suffpage-common') }}
<style media="all">
    @import url("/themes/suffix_zx/css/personal-center.css?p1thfq");
</style>
<header class="header">
    <a href="javascript:history.back(-1);" class="pl backtohis"></a>
    <h2 class="headerTitle"><span>服务地址</span></h2>
</header>
<div class="profile-9vcMlb wrapper">
    <div class="address-container">
        <div class="addressBox">
            <a href="/user/{{ _context.user.id }}/customer/add" class="add-address"><em>+</em>新增地址</a>
        </div>
        <ul class="address-list">
            {% for addr in addressList %}
            <li>
                <p><label>姓名：</label><span>{{ addr.given_name }}{{ addr.family_name }}</span><span class="phoneNumber">{{ addr.field_phonenumber }}</span></p>
                <p>{% if addr.is_default %}<em class="default">[默认]</em>{% endif %}<label>收货：</label><span class="Address">{{ addr.administrative_area }}{{ addr.locality }}{{ addr.dependent_locality }}{{ addr.address_line2 }}{{ addr.address_line1 }}</span></p>
                <a href="/profile/{{ addr.profile_id }}/edit?destination=/user/{{ _context.user.id }}/customer" class="edit-address"></a>
            </li>
            {% endfor %}
            {#<li>#}
                {#<p><label>姓名：</label><span>阿福</span><span class="phoneNumber">15925456257</span></p>#}
                {#<p><label>收货：</label><span class="Address">广东省广州市天河区东圃一横路13号汇 宝商业中心B区1A020室</span></p>#}
                {#<a href="/home/address/edit/2" class="edit-address"></a>#}
            {#</li>#}
        </ul>
    </div>
</div>
